@model IEnumerable<Category>

<div class="container" p-3>
    <div class="row" pt-4>
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">
            Create New Category
            </a>          
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Display Order</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.DisplayOrder</td>
                        <td><a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary">Edit</a></td>
                        <td><a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger" onclick="return confirm( 'Are you Sure.')">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="color:red">No Categories Exists :(</p>
    }

</div>

